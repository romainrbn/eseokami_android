<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/hotlineFillRestaurantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Nom du restaurant"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="23sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

            <EditText
                android:id="@+id/hotlineFillFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Ton prénom"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="47dp" />

            <EditText
                android:id="@+id/hotlineFillName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Ton nom"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="14dp"
                tools:layout_editor_absoluteY="106dp" />

            <EditText
                android:id="@+id/hotlineFillNumero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Ton numéro"
                android:inputType="phone"
                tools:layout_editor_absoluteX="12dp"
                tools:layout_editor_absoluteY="163dp" />

            <EditText
                android:id="@+id/hotlineFillAdresse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Ton adresse"
                android:inputType="textPostalAddress"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="230dp" />

            <EditText
                android:id="@+id/hotlineFillCommande"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Entre ici ta commande. Sois le plus précis possible (menu, quantité...). Le prix total ne doit pas dépasser 10€."
                android:inputType="textMultiLine"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="289dp" />

            <EditText
                android:id="@+id/hotlineFillInfos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Informations supplémentaires pour la livraison (étage...)"
                android:inputType="textMultiLine"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="441dp" />

            <Button
                android:id="@+id/hotlineFillConfirmer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:text="Valider la commande"
                android:textColor="@color/cardview_light_background" />





        </LinearLayout>


    </ScrollView>



</LinearLayout>